<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <bean id="dogControllerBean" class="pro.mikhail.learnsomejava.controller.DogController">
        <constructor-arg>
            <ref bean="dogServiceBean"/>
        </constructor-arg>
    </bean>
    <mvc:annotation-driven/>

    <bean id="dogServiceBean" class="pro.mikhail.learnsomejava.service.DogService">
        <constructor-arg>
            <ref bean="dogDaoBean"/>
        </constructor-arg>
    </bean>

    <bean id="dogDaoBean" class="pro.mikhail.learnsomejava.dao.DogDao"/>



</beans>